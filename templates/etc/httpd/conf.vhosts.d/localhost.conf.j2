<VirtualHost *:80>
    ServerName localhost
    ServerAlias localhost.localdomain
    DocumentRoot /var/www/html
    CustomLog "| /usr/sbin/cronolog logs/http-access-%Y-%m-%d.log" combined env=!nolog
    ErrorLog  "| /usr/sbin/cronolog logs/http-errors-%Y-%m-%d.log"

    <Directory "/var/www/html">
        <RequireAny>
            Require ip 127.0.0.1/32
        </RequireAny>
    </Directory>
</VirtualHost>
